{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "DJANGO_SETTINGS_MODULE": "school_website.settings",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "*.vercel.app,*.vercel.sh"
  },
  "regions": ["iad1"],
  "functions": {
    "api/**": {
      "runtime": "python3.11",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
